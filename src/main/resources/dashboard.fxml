<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="be.ehb.rockhub.DashboardController">

    <left>
        <VBox prefWidth="300" spacing="15" styleClass="sidebar">
            <Label styleClass="header-label" text="Nieuwe Sessie" />

            <VBox spacing="5">
                <Label style="-fx-text-fill: #666; -fx-font-size: 12px;" text="Datum" />
                <DatePicker fx:id="datePicker" maxWidth="Infinity" />
            </VBox>

            <VBox spacing="5">
   
               <VBox spacing="5">
                   <Label style="-fx-text-fill: #666; -fx-font-size: 12px;" text="Type" />
                   <ComboBox fx:id="comboType" maxWidth="Infinity" />
               </VBox>
                <Label style="-fx-text-fill: #666; -fx-font-size: 12px;" text="Locatie" />
                <TextField fx:id="txtLocatie" promptText="bv. Klimax" />
            </VBox>

            <VBox spacing="5">
                <Label style="-fx-text-fill: #666; -fx-font-size: 12px;" text="Graad" />
                <TextField fx:id="txtGraad" promptText="bv. 6b" />
            </VBox>
         <VBox prefHeight="68.0" prefWidth="250.0">
            <children>
               <Label text="Duur van de sessie (+-)" />
               <TextField fx:id="txtDuration" promptText="per halfuur (vb. 0:30)" />
            </children>
         </VBox>

            <VBox spacing="5">
                <Label style="-fx-text-fill: #666; -fx-font-size: 12px;" text="Notities" />
            </VBox>
             <TextArea fx:id="txtNotities" prefRowCount="3" promptText="Hoe voelde het?" wrapText="true" />

            <Region VBox.vgrow="ALWAYS" /> <Button maxWidth="Infinity" onAction="#onVoegToe" styleClass="button, button-primary" text="Voeg Sessie Toe" />
        </VBox>
    </left>

    <center>
        <VBox spacing="20">
            <padding><Insets bottom="25" left="25" right="25" top="25" /></padding>

            <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                <tabs>
                    <Tab text="Lijstweergave">
                        <content>
                            <VBox spacing="10" style="-fx-padding: 10;">

                                <ListView fx:id="listSessies" style="-fx-background-insets: 0; -fx-padding: 5;" VBox.vgrow="ALWAYS" />

                                <Button maxWidth="Infinity" onAction="#onVerwijder" style="-fx-background-color: #ff5252; -fx-text-fill: white; -fx-font-weight: bold;" text="Verwijder Geselecteerde Sessie" />

                            </VBox>
                        </content>
                    </Tab>
                    <Tab text="Progressie Grafiek">
                        <content>
                            <VBox style="-fx-padding: 10;">
                                <LineChart fx:id="progressieGrafiek" legendVisible="false" title="Mijn Evolutie">
                                    <xAxis>
                                        <CategoryAxis fx:id="dateAxis" label="Datum" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis fx:id="gradeAxis" autoRanging="true" forceZeroInRange="false" label="Niveau" />
                                    </yAxis>
                                </LineChart>
                            </VBox>
                        </content>
                    </Tab>
                </tabs>
            </TabPane>

            <VBox prefHeight="395.0" prefWidth="651.0" spacing="10" styleClass="card">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label styleClass="sub-header-label" text="AI Coach Advies" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Button onAction="#onVraagAi" styleClass="button, button-secondary" text="Vraag AI Analyse" />
                </HBox>
                <TextArea fx:id="txtAiAdvies" editable="false" prefHeight="187.0" prefWidth="621.0" promptText="Druk op de knop voor advies..." style="-fx-background-color: transparent;" wrapText="true" />
            </VBox>

        </VBox>
    </center>
</BorderPane>
